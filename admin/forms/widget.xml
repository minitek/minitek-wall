<?xml version="1.0" encoding="utf-8"?>

<form addfieldprefix="Joomla\Component\MinitekWall\Administrator\Field">

	<fieldset name="basic">

		<field
			name="name"
			type="text"
			class="input-xxlarge"
			size="40"
			label="COM_MINITEKWALL_FIELD_WIDGET_NAME_LABEL"
			required="true"
		/>

		<field
			name="description"
			type="textarea"
			class="inputbox"
			label="COM_MINITEKWALL_FIELD_WIDGET_DESCRIPTION_LABEL"
			description="COM_MINITEKWALL_FIELD_WIDGET_DESCRIPTION_DESC"
			rows="10"
			cols="80"
			filter="raw"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			filter="intval"
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="id"
			type="hidden"
			default="0"
		/>

		<field name="asset_id" type="hidden" filter="unset" />

	</fieldset>

	<fieldset name="hidden">

		<field
			name="source_id"
			type="hidden"
			default=""
		/>

	</fieldset>

</form>
